{% extends 'front.html.twig' %}

{% block main %}
    <h1>Club</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ club.nom }}</td>
            </tr>
            <tr>
                <th>Activite</th>
                <td>{% if club.activite %}{{ club.activite|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ club.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('club_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('club_edit', { 'id': club.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
