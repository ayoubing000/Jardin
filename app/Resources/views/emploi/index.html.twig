{% extends '::base_admin.html.twig' %}

{% block body %}
<div class="content-page">
    <div class="content" style="background: white">

    <h1>Emplois list</h1>
        <form method="post" action="{{ path('emploi_findid') }}">
<input type="text" name="id"  >
        <input type="submit" value="recherche">
        </form>
    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jour</th>
                <th>Description</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emploi in emplois %}
            <tr>
                <td><a href="{{ path('emploi_show', { 'id': emploi.id }) }}">{{ emploi.id }}</a></td>
                <td>{% if emploi.jour %}{{ emploi.jour|date('Y-m-d') }}{% endif %}</td>
                <td>{% if emploi.description %} {{ emploi.description }}
                    {% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('emploi_show', { 'id': emploi.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('emploi_edit', { 'id': emploi.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('emploi_new') }}">Create a new emploi</a>
        </li>
    </ul>
    </div>
</div>
{% endblock %}
