{% extends 'base_admin.html.twig' %}
      {% block body %}
<center>
    <h1>Competitions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Nbrparticipants</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Description</th>
                <th>Membre</th>
                <th>club</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competition in competitions %}
            <tr>
                <td><a href="{{ path('yes_show', { 'id': competition.id }) }}">{{ competition.id }}</a></td>
                <td>{{ competition.nom }}</td>
                <td>{{ competition.type }}</td>
                <td>{{ competition.nbrParticipants }}</td>
                <td>{% if competition.dateDebut %}{{ competition.dateDebut|date('Y-m-d') }}{% endif %}</td>
                <td>{% if competition.dateFin %}{{ competition.dateFin|date('Y-m-d') }}{% endif %}</td>
                <td>{{ competition.description }}</td>
                <td>{% if competition.membre %}{{ competition.membre|join(', ') }}{% endif %}</td>
                <td>{{ competition.club }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('yes_show', { 'id': competition.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('yes_edit', { 'id': competition.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('yes_new') }}">Create a new competition</a>
        </li>
    </ul>
</center>
      {% endblock %}